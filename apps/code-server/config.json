{
  "$schema": "../app-config-schema.json",
  "name": "Code Server",
  "id": "code-server",
  "available": true,
  "short_desc": "VS Code in the browser.",
  "author": "coder",
  "port": 8532,
  "categories": ["development"],
  "description": "Run VS Code on any machine anywhere and access it in the browser.",
  "tipi_version": 1,
  "version": "4.89.1",
  "source": "https://github.com/coder/code-server",
  "exposable": true,
  "supported_architectures": ["arm64", "amd64"],
  "form_fields": [
    {
      "type": "password",
      "label": "Code server password.",
      "min": 8,
      "required": true,
      "env_variable": "CODE_SERVER_PASSWORD"
    },
    {
      "type": "password",
      "label": "Code server sudo password.",
      "min": 8,
      "env_variable": "CODE_SERVER_SUDO_PASSWORD"
    }
  ],
  "dynamic_config": true
}
