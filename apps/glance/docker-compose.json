{
  "$schema": "../docker-compose-schema.json",
  "services": [
    {
      "name": "glance",
      "image": "glanceapp/glance:v0.4.0",
      "internalPort": 8080,
      "isMain": true,
      "volumes": [
        {
          "containerPath": "/app/glance.yml",
          "hostPath": "${APP_DATA_DIR}/data/glance.yml"
        },
        {
          "containerPath": "/etc/timezone",
          "hostPath": "/etc/timezone",
          "readOnly": true
        },
        {
          "containerPath": "/etc/localtime",
          "hostPath": "/etc/localtime",
          "readOnly": true
        }
      ]
    }
  ]
}
